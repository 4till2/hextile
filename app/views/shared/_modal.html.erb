<div
  data-controller='modal'
  data-modal-target="self"
  data-action='keydown@window->modal#closeWithKeyboard'
  class="w-full flex"
>
  <div data-modal-target='container' class="fixed z-10 inset-0 overflow-y-auto min-h-screen" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <div data-modal-target='background' data-action='click->modal#closeWithBackground' class="cursor-pointer fixed inset-0 backdrop-blur-lg bg-black/70 bg-opacity-50 transition-opacity text-center" aria-hidden="true">
        <div onclick="this.parentElement.click()" class="w-full flex my-4">
          <span class="p-1 px-8 rounded-full bg-white/10 mx-auto text-black/40 cursor-pointer hover:bg-soft-white/20">Close</span>
        </div>
      </div>
      <!-- This element is to trick the browser into centering the modal contents. -->
      <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
      <% if local_assigns[:center] %>
        <!-- Dynamically sized center modal-->
        <div class="inline-block align-middle mx-auto bg-soft-white p-3 text-left overflow-hidden shadow-xl transform transition-all ">
      <% else %>
        <!-- Full size modal-->
        <div class="absolute top-0 bottom-0 left-0 right-0 p-8 w-11/12 m-auto my-16 align-bottom bg-soft-white rounded-md text-left overflow-y-scroll shadow-xl transform transition-all sm:align-middle">
      <% end %>
      <% if local_assigns[:title] %>
        <div class="flex justify-between">
          <div class="py-2 font-semibold" data-model-target='title'><%= local_assigns[:title] %></div>
        </div>
      <% end %>

      <div data-modal-target='content' class="w-full h-full">
        <%= yield %>
      </div>
      </div>
      </div>
    </div>
  </div>
</div>

